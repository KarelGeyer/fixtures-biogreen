root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{yaml,yml,js,json,neon,sh}]
charset = utf-8
indent_style = space
indent_size = 2

[composer.json]
charset = utf-8
indent_style = tab
indent_size = 4

[*.js]
block_comment_start = /**
block_comment = *
block_comment_end = */
